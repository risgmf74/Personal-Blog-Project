<%- include('partials/header'); -%>

<div class="container"">
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input id="title" class="form-control" type="text" name="postTitle" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="postBody">Post</label>
            <textarea id="postMessage" class="form-control" name="postBody" rows="5"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>
</div>

<%- include('partials/footer'); -%>